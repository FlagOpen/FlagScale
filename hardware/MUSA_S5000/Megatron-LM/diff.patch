+    # all_param_num = getattr(args, "all_param_num", None)
+    # assert all_param_num is not None, "please set all_param_num"
+    # MFU = chip_throughput * 6 * all_param_num * (1 + args.seq_length / (6 * args.hidden_size) ) / 98e12
